{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nx-shard",
  "version": "1.1.3",
  "identifier": "com.surelle.nx-shard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run generate",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nxShard",
        "width": 1200,
        "height": 720,
        "shadow": true,
        "decorations": false,
        "center": true,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ3QjVEQTgyRUQ4MjNGMTcKUldRWFA0THRndHExMSs1amtMUUZERis0RWZoeTBoS29ucHdZQ0lzckxmbFlsL2V0MHdOdXNRRjYK",
      "endpoints": [
        "https://github.com/surelle-ha/nx-shard/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
